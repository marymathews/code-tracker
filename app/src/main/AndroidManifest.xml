<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mathews.codetracker">

    <application
        android:name=".app.MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="false">

        <activity android:name=".modules.splash.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".modules.selectOption.SelectOptionActivity" android:screenOrientation="portrait" />

        <activity android:name=".modules.addSessionDetails.AddSessionDetailsActivity" android:screenOrientation="portrait" />

        <activity android:name=".modules.viewSessionList.ViewSessionListActivity" android:screenOrientation="portrait" />

        <activity android:name=".modules.viewSessionDetails.ViewSessionDetailsActivity" android:screenOrientation="portrait" />

    </application>

</manifest>